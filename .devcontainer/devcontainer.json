{
  "name": "Makeability Lab Website",
  "dockerComposeFile": "../docker-compose-local-dev.yml",
  "service": "website",
  "workspaceFolder": "/code",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",            // Standard Python support
        "ms-python.vscode-pylance",    // Faster language server
        "batisteo.vscode-django",      // Best Syntax Highlighting
        "monosans.djlint"              // Best Formatter & Linter
      ],
      "settings": {
        // This tells VS Code to use DjLint to format your HTML files
        "[django-html]": {
          "editor.defaultFormatter": "monosans.djlint"
        },
        "[html]": {
          "editor.defaultFormatter": "monosans.djlint"
        },
        // Ensures .html files are treated as Django templates
        "files.associations": {
          "**/templates/**/*.html": "django-html",
          "**/templates/**/*": "django-txt"
        }
      }
    }
  },

  // This command runs automatically every time the container is created.
  // It fixes the "dubious ownership" git error for Mac and Windows users alike.
  "postCreateCommand": "git config --global --add safe.directory /code",

  // Connect as the 'apache' user defined in your Dockerfile, 
  // or 'root' if you encounter permission issues editing files.
  "remoteUser": "root" 
}